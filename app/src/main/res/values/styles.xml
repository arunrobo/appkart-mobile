<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_appkart</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Appkart</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Appkart</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Appkart</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Appkart</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Appkart</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_appkart</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_appkart</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Appkart</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Appkart.Widget</item>

        <!-- custom -->
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:editTextStyle">@style/EditTextappkart</item>
        <item name="android:textColorHighlight">#9900ab60</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewappkart</item>
        <item name="android:checkboxStyle">@style/CheckBoxappkart</item>
        <item name="android:radioButtonStyle">@style/RadioButtonappkart</item>
        <item name="android:buttonStyle">@style/Buttonappkart</item>
        <item name="android:imageButtonStyle">@style/ImageButtonappkart</item>
        <item name="android:spinnerStyle">@style/Spinnerappkart</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemappkart</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarappkart</item>
        <item name="android:seekBarStyle">@style/SeekBarappkart</item>
        <item name="android:ratingBarStyle">@style/RatingBarappkart</item>
        <item name="android:ratingBarStyleIndicator">@style/RatingBarBigappkart</item>
        <item name="android:ratingBarStyleSmall">@style/RatingBarSmallappkart</item>
        <item name="android:buttonStyleToggle">@style/Toggleappkart</item>
        <item name="android:listViewStyle">@style/ListViewappkart</item>
        <item name="android:listViewWhiteStyle">@style/ListViewappkart.White</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemappkart</item>


    </style>

    <style name="ActionBar.Solid.Appkart" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_appkart</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_appkart</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_appkart</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Appkart</item>
    </style>

    <style name="ActionBar.Transparent.Appkart" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_appkart</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Appkart</item>
    </style>

    <style name="PopupMenu.Appkart" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_appkart</item>
    </style>

    <style name="DropDownListView.Appkart" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_appkart</item>
    </style>

    <style name="ActionBarTabStyle.Appkart" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_appkart</item>
    </style>

    <style name="DropDownNav.Appkart" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_appkart</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_appkart</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_appkart</item>
    </style>

    <style name="ProgressBar.Appkart" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_appkart</item>
    </style>

    <style name="ActionButton.CloseMode.Appkart" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_appkart</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Appkart.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Appkart</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Appkart</item>
    </style>

</resources>